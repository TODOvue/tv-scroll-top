    },
    "./style.css": "./dist/tv-scroll-top.css",
    "./nuxt": "./nuxt.js"
  },
  "main": "dist/tv-scroll-top.cjs.js",
  "module": "dist/tv-scroll-top.es.js",
  "types": "dist/tv-scroll-top.d.ts",
  "files": [
    "dist",
    "LICENSE",
    "README.md",
    "nuxt.js"
  ],
  "engines": {
    "node": ">=20.19.0"
  },
  "sideEffects": [
    "*.css",
    "*.scss",
    "dist/*.css"
