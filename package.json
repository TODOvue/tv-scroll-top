{
  "name": "@todovue/tv-scroll-top",
  "private": false,
  "author": "Cristhian Daza",
  "description": "A Vue 3 component to show a button that scrolls the page to the top when clicked.",
  "license": "MIT",
  "version": "1.0.1",
  "type": "module",
  "homepage": "https://ui.todovue.blog/scrolltop",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TODOvue/tv-scroll-top.git"
  },
  "bugs": {
    "url": "https://github.com/TODOvue/tv-scroll-top/issues"
  },
  "keywords": [
    "todovue",
    "front-end",
    "web",
    "vue",
    "vuejs",
    "vue-js",
    "scroll-top",
    "show-scroll-top",
    "vue-scroll-top",
    "vue-scroll-top-component"
  ],
  "exports": {
    ".": {
      "import": "./dist/tv-scroll-top.es.js",
