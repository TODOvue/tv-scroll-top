  },
  "peerDependencies": {
    "vue": "^3.5.26"
  },
  "devDependencies": {
    "@todovue/tv-demo": "^1.2.7",
    "@vitejs/plugin-vue": "^6.0.3",
    "sass": "^1.97.1",
    "vite": "^7.3.0",
    "vite-plugin-dts": "^4.5.4"
  }
